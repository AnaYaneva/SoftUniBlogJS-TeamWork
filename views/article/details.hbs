<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <div class="details">

                <header>
                    <h2>More About Me:</h2>
                </header>
                    <img src="{{article.photo}}" alt="not working">

                    <p><b>Name:</b> {{article.name}}
                </p>
                    <p><b>Age:</b> {{article.age}}
                </p>

                <p><b>Place of Birth:</b>  {{article.city}}
                </p>
                <p><b>University Degree:</b> {{article.education}}
                </p>
                    <p><b>Specialization:</b> {{article.specialization}}
                </p>
                    <p><b>Certifications:</b> {{article.certifications}}
                    </p>
                    <p><b>Current Working Place:</b> {{article.workplace}}
                    </p>
                <p><b>Working Experience:</b> {{article.work}}
                </p>
                <p><b>About me:</b> {{article.content}}
                </p>
                <p><b>Telephone Number:</b> {{article.telephone}}
                </p>

                </div>

                <footer>

                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                            <a class="btn btn-sm btn-success" href="/article/edit/{{article.id}}">Edit &raquo;</a>
                            <a class="btn btn-sm btn-danger" href="/article/delete/{{article.id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-sm" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>

            <!-- BEGIN #comments -->

            <div class="body-content">
                {{#each comments}}
                    <div class="media-body">
                        <div class="well well-lg">
                            <h class="media-heading text-uppercase reviews">{{this.author.fullName}}</h>
                            <p class="media-comment">
                                {{this.content}}
                            </p>
                        </div>

                    </div>
                {{/each}}
                <hr>


                <!--end-->
                {{#if user}}
                    <div align="center">
                        <form class="form-horizontal" method="POST" action="/article/details/{{article.id}}">
                            <div class="form-group">
                                <label>Добави коментар</label> <br>
                                <input type="text" class="form-control" placeholder="{{user.email}}" value="E-mail: {{user.email}}" name="title" disabled >

                                <input type="text" class="form-control"  placeholder="{{user.fullName}}" value="Име: {{user.fullName}}" name="title" disabled >

                                <textarea class="form-control" cols="100" rows="10" id="comment" placeholder="Текст на коментара" name="content" ></textarea>
                            </div>
                            <div class="form-group">

                                <button type="reset" class="btn btn-danger">Cancel</button>
                                <button type="submit" class="btn btn-success">Submit</button>

                            </div>
                        </form>
                    </div>
                {{/if}}
            </div>

        </div>
    </div>

</div>
        </div>
    </div>
</div>